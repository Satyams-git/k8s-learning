apiVersion: apps/v1
kind: Deployment
metadata:
  name: stress-load
  namespace: load-ns
spec:
  replicas: 3
  selector:
    matchLabels:
      app: stress-load
  template:
    metadata:
      labels:
        app: stress-load
    spec:
      containers:
      - name: stress
        image: polinux/stress
        args:
          - "--cpu"
          - "2"
          - "--io"
          - "1"
          - "--vm"
          - "1"
          - "--vm-bytes"
          - "64M"
          - "--timeout"
          - "600s"
